#include <iostream>
#include <string>
#include "Stack.h"
#include "Stack.cpp"
using namespace std;
#define MAX 50

int priority(char);

class Expression{
	char arr[MAX];
	public:
		void toprefix();
		void topostfix();
		void enterdata();
		void display();
};

void Expression :: toprefix(){

}

void Expression :: display(){
	int i=0;
	while(arr[i] != '\0'){
		cout << arr[i];
		i++;
	}
}

void Expression :: topostfix(){
	Stack<char> s;
	char postfix[MAX];
	int i=0, j=0;

	while(arr[i]!='\0'){
		if(arr[i] == '('){
			s.push(arr[i]);
		} else if (arr[i]==')'){
			while(s.Top()!='('){
				postfix[j] = s.pop();
				j++;
			}
			s.pop();
		} else if((arr[i] >= 65 && arr[i] <= 91) || (arr[i] >= 97 && arr[i] <= 129)){
			postfix[j] = arr[i];
			j++;
		}
		else{
			 while(!s.empty() && priority(s.Top()) >= priority(arr[i])){
				postfix[j] = s.pop();
				j++;
			 }
			 s.push(arr[i]);
		}
		i++;
	}

	while(!s.empty()){
		postfix[j] = s.pop();
		j++;
	}
	postfix[j] = '\0';

	i=0;
	while(postfix[i] != '\0'){
		cout << postfix[i];
		i++;
	}
}

int priority(char a){
	switch(a){
		case '(':
			return 1;

		case ')':
			return 2;

		case '+':
			return 3;

		case '-':
			return 3;

		case '*':
			return 4;

		case '/':
			return 4;

		case '^':
			return 5;
	}
	return 0;
}

void Expression :: enterdata(){
	cout << "Enter Infix String: ";
	cin.getline(arr, MAX);
}

int main() {
	int num;
	int val;

	Expression ex;
	ex.enterdata();
	ex.topostfix();

	return 0;
}
